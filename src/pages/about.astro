---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Me";

const identity = {
  firstName: "Sarah",
  country: "Canada",
  occupation: "Teacher",
  hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "Javascript", "React", "Astro"];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "blue";
const skillBg = "red";
const textCase = "lowercase";
---

<BaseLayout pageTitle={pageTitle}>
  <style define:vars={{ skillColor, skillBg, textCase }}>
    h1 {
      color: purple;
      font-size: 4rem;
    }
    .skill {
      color: var(--skillColor);
      font-weight: bold;
      background-color: var(--skillBg);
      text-transform: var(--textCase);
    }
  </style>

  <h2>... and my new Astro site!</h2>

  <p>
    I am working through Astro's introductory tutorial. This is the second page
    on my website, and it's the first one I built myself!
  </p>

  <p>
    This site will update as I complete more of the tutorial, so keep checking
    back and see how my journey is going!
  </p>
  <p>Some facts about me:</p>
  <ul>
    <li>My name is {identity.firstName}</li>
    <li>I live in {identity.country} and work as a {identity.occupation}.</li>
    {
      identity.hobbies.length >= 3 && (
        <li>
          {identity.hobbies.length} of my hobbies are {identity.hobbies[0]},{" "}
          {identity.hobbies[1]} and {identity.hobbies[2]}{" "}
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill} </li>)}
  </ul>
  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not 3 days.</p>
    )
  }
</BaseLayout>
